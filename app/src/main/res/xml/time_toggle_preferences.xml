<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:key="@string/pref_key_time_toggle"
        android:title="@string/time_toggle_title"
        android:layout="@layout/switch_bar"
        android:defaultValue="false" />

    <com.jmstudios.redmoon.preference.TimePickerPreference
        android:key="@string/pref_key_custom_turn_on_time"
        android:title="@string/custom_start_time_title"
        android:defaultValue="22:00" />

    <com.jmstudios.redmoon.preference.TimePickerPreference
        android:key="@string/pref_key_custom_turn_off_time"
        android:title="@string/custom_end_time_title"
        android:defaultValue="06:00" />

    <SwitchPreference
        android:key="@string/pref_key_use_location"
        android:title="@string/use_location_title"
        android:dependency="@string/pref_key_time_toggle"
        android:defaultValue="false" />

    <Preference
        android:key="@string/pref_key_location"
        android:title="@string/location_title"
        android:dependency="@string/pref_key_use_location" />

</PreferenceScreen>
